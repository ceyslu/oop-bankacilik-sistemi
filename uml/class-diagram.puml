' =======================
'        PACKAGES
' =======================

package "banka.hesap" {
  abstract class Hesap
  class VadesizHesap
  class TasarrufHesabi
  class AltinCuzdani
  interface IHesapIslemleri
  interface TransferEdilebilir
}

package "banka.islem" {
  interface Islem
  class IslemGecmisi
  class ParaYatirmaIslemi
  class ParaCekmeIslemi
  class TransferIslemi
  class UcretIslemi
  class AltinAlimIslemi
  class BilgiIslemi
  class IslemGecmisiIslemi
}

package "banka.model" {
  class Musteri
}

